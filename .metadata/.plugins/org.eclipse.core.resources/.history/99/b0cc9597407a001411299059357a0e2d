Titanium.UI.setBackgroundColor("#fff");

var mainWindow = Ti.UI.createWindow({
	title: "my First Window",
	backgroundColor: "#C44F67",
	// backgroundImage: "swirl_pattern.png",
	// backgroundRepeat: true
});

var headView = Ti.UI.createView({
	backgroundColor: "#8CD9D2",
	height: 50,
	top: 20,
	left: 5,
});

var instructionsView = Ti.UI.createView({
	backgroundColor: "#E0F2D9",
	borderColor: "#8A432E",
	borderWidth: 1,
	borderRadius: 5,
	left: 5,
	right: 5
});

mainWindow.add(headView);
mainWindow.open();
