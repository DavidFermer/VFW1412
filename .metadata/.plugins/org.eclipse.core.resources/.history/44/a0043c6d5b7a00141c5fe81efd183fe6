
//Variables
var pieArray = ["Apple", "Pecan", "Pumpkin", "Cherry", "Rasberry"];

//views
var arrayView = Ti.UI.createView({
	backgroundColor: "#eec81b",
	borderRadius: 5,
	left: 5,
	right: 5,
	top: 25,
	height: 30
});

var nextView = Ti.UI.createView({
	backgroundColor: "#cd0000",
	borderRadius: arrayView.borderRadius,
	height: 75,
	width: 75,
	bottom: 15,
	right: 15
});


var previousView = Ti.UI.createView({
	backgroundColor: "brown",
	borderRadius: arrayView.borderRadius,
	height: nextView.height,
	width: nextView.width,
	bottom: nextView.bottom,
	left: nextView.right
});

// labels
var arrayLabel = Ti.UI.createLabel({
	text: pieArray[0],
	left: 5,
	Right: 5,
	color: "#000",
	font: {fontSize: 18, fontFamily: "Helvetica"},
	textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER
});

var nextViewLabel = ti.UI.createLabel({
	text: "Next",
	color: "#000",
	font: {fontSize: 10, fontFamily: "Helvetica"},
	textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER
});

var previousViewLabel = ti.UI.createLabel([
	text: "Previous",
	color: nextViewLabel.color,
	font: {fontSize: 10, fontFamily: "Helvetica"},
	textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER
]);

// calls
arrayView.add(arrayLabel);
nextView.add(nextViewLabel);
mainWindow.add(arrayView, nextView, previousView);

