Titanium.UI.setBackgroundColor("#fff");

var mainWindow = Ti.UI.createWindow({
	title: "my First Window",
	backgroundColor: "#C44F67",
	// backgroundImage: "swirl_pattern.png",
	// backgroundRepeat: true
});

var headView = Ti.UI.createView({
	backgroundColor: "#8CD9D2",
	height: 50,
	top: 20,
	left: 5,
	right: 5
});

var instructionsLabel = Ti.UI.createLabel({
	text: "Instructions: Roll the dice and try to roll doubles to win!",
	color: "#000",
	font:{fontSize: 14, fontFamily: "Helvetica"},
	left: 15,
	right: 15, 
	//height: Ti.UI.SIZE
});

var instructionsView = Ti.UI.createView({
	backgroundColor: "#E0F2D9",
	borderColor: "#8A432E",
	borderWidth: 1,
	borderRadius: 5,
	height: 50,
	top: headView.height + headView.top + 10,
	left: 5,
	right: 5
});

var dieA = Ti.UI.createView({
	backgroundColor: "#214363",
	borderRadius: 10,
	width: 110,
	height: 110,
	top: instructionsView.top + instructionsView.height + 30,
	left: 5
});

var dieB = Ti.UI.createView({
	backgroundColor: "#2D8665",
	borderRadius: 10,
	width: 110,
	height: 110,
	top: instructionsView.top + instructionsView.height + 30,
	right: 5
});

var resultsLabel = Ti.UI.createLabel({
	text: "will you roll doubles?",
	left: 5,
	Right: 5,
	color: "#fff",
	font: {fontSize: 18, fontFamily: "Helvetica"},
	textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER
});

var resultsView = Ti.UI.createView({
	top: dieA.top + dieA.height + 30,
	left: 5,
	right: 5,
	height: 30,
	borderColor: "#fff",
	borderRadius: 5,
	borderWidth: 1
});

var rollView = Ti.UI.createView({
	backgroundColor: "#E2D8A7",
	borderRadius: 10,
	height: 100,
	left: 5,
	right: 5,
	bottom: 5
});

mainWindow.add(headView);
instructionsView.add(instructionsLabel);
mainWindow.add(instructionsView);
mainWindow.add(dieA, dieB, resultsView, rollView);
mainWindow.open();
